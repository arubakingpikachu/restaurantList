
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..." value="{{keywords}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="container m-5">
  <a class="btn btn-primary text-align" href="./restaurants/new"class="text-primary mb-3">create</a>
  <form action="/" method="get">
  <div class="sort-container">
    <label for="sortStyle">排列方式</label>
      <select  name="sortStyle" id="sortStyle" >
        <option  value="0">A to Z</option>
        <option  value="1">Z to A</option>
        <option  value="3">地區</option>
        <option  value="5">類別</option>
      </select>
  </div>
  </form>
</div>



<div class="container mt-5">
    
  <div class="row">
    <div class="col-md-10 col-12 mx-auto"> 
      <div class="row row-cols-1 row-cols-sm-3">
        
       {{#each restaurants}} 
        <div class="col">
          <div class="card m-1">
            <a href="./restaurants/{{ this._id }}"><img class="card-img-top"  src="{{this.image}}" alt="{{this.name}}"></a>
            <div class="card-body">
              <a href="./restaurants/{{ this._id }}">
              <h6 class="card-title mb-1">{{this.name}}</h6>
              </a>
              <p>評價:{{this.rating}}</p>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>
                <a class="btn btn-primary btn-sm" href="./restaurants/{{ this._id }}" role="button">Detail</a>
                <a class="btn btn-primary btn-sm" href="./restaurants/{{ this._id }}/edit" role="button">Edit</a>
                <form action="./restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button></form>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>